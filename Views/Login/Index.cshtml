@model Epicotel.Models.Login

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "row g-3 needs-validation" }))
{
    @Html.AntiForgeryToken()

    if (TempData["ErrorLogin"] != null)
    {
        <div class="alert alert-danger" role="alert">
            Le credenziali non sono corrette.
        </div>
    }

    <div class="col-6 form-group">
        @Html.LabelFor(model => model.Username, new { htmlAttributes = new { @class = "form-label" } })
        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="col-6 form-group">
        @Html.LabelFor(model => model.Password, new { htmlAttributes = new { @class = "form-label" } })
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
    </div>

    <div class="col-12">
        <button class="btn btn-primary mt-3" type="submit">Login</button>
    </div>
}